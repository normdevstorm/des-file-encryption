<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="layout" spacing="20" styleClass="container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.normdevstorm.encryptedfiletransfer.server.controller.ServerController">
    <children>
        <Label fx:id="titleLabel" text="File Encrypt &amp; Transfer" styleClass="title-label"/>
        <Button fx:id="selectFileBtn" text="Choose File" styleClass="modern-button"/>
        <Button fx:id="sendBtn" text="Send Encrypted File" styleClass="modern-button" disable="true"/>
<!--        <Button fx:id="receiveBtn" text="Receive &amp; Decrypt" styleClass="modern-button"/>-->
        <TextArea fx:id="statusArea" editable="false" prefHeight="200"/>



        <TextArea fx:id="messageInput" promptText="Enter message to send" styleClass="modern-textfield" wrapText="true" prefHeight="200"/>
        <TextField fx:id="encryptionKeyInput" promptText="Enter encryption key" styleClass="modern-textfield"/>
        <Button fx:id="sendTextBtn" text="Send Encrypted Message" styleClass="modern-button"/>



    </children>
</VBox>